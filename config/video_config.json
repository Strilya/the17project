{
  "background_videos": {
    "enabled": true,
    "source": "pexels",
    "fallback_to_gradient": true,
    "cache_enabled": true,
    "cache_dir": "output/background_cache",
    "max_cache_size": 50,
    "categories": {
      "angel_numbers": [
        "purple nebula space",
        "starry night sky timelapse",
        "aurora borealis purple",
        "milky way galaxy purple",
        "cosmic meditation stars",
        "spiritual light rays purple"
      ],
      "productivity": [
        "peaceful sunrise meditation",
        "golden hour nature peaceful",
        "zen garden stones water",
        "minimal blue sky clouds",
        "focus morning light nature",
        "tranquil forest sunlight"
      ],
      "manifestation": [
        "purple sunset clouds peaceful",
        "pink clouds sunset dreamy",
        "golden light rays spiritual",
        "rose gold sunset magic",
        "candles meditation peaceful",
        "glowing crystals spiritual"
      ],
      "spiritual_growth": [
        "meditation purple spiritual",
        "spiritual light rays peaceful",
        "aurora borealis meditation",
        "cosmic energy stars",
        "zen peaceful nature water",
        "mystical forest light rays"
      ]
    },
    "video_settings": {
      "orientation": "portrait",
      "size": "large",
      "per_page": 10
    }
  },
  "video_settings": {
    "resolution": [1080, 1920],
    "fps": 30,
    "duration": 17,
    "output_format": "mp4",
    "output_folder": "output/reels"
  },
  "scene_timings": {
    "hook": 2,
    "meaning": 5,
    "action": 6,
    "cta": 4
  },
  "color_palettes": {
    "angel_numbers": {
      "background": "#8B5CF6",
      "primary_text": "#FFD700",
      "secondary_text": "#FFFFFF",
      "accent": "#DDA0DD",
      "gradient_start": "#6B21A8",
      "gradient_end": "#8B5CF6"
    },
    "productivity": {
      "background": "#3B82F6",
      "primary_text": "#FFFFFF",
      "secondary_text": "#E0F2FE",
      "accent": "#60A5FA",
      "gradient_start": "#1E40AF",
      "gradient_end": "#3B82F6"
    },
    "manifestation": {
      "background": "#FB7185",
      "primary_text": "#FFD700",
      "secondary_text": "#FFFFFF",
      "accent": "#FDA4AF",
      "gradient_start": "#BE123C",
      "gradient_end": "#FB7185"
    },
    "spiritual_growth": {
      "background": "#6366F1",
      "primary_text": "#FFD700",
      "secondary_text": "#E0E7FF",
      "accent": "#A5B4FC",
      "gradient_start": "#4338CA",
      "gradient_end": "#6366F1"
    }
  },
  "fonts": {
    "primary": {
      "family": "DejaVuSans-Bold",
      "path": "fonts/DejaVuSans-Bold.ttf",
      "size": {
        "hook": 90,
        "meaning": 70,
        "action": 70,
        "cta": 80
      }
    },
    "secondary": {
      "family": "DejaVuSans-Bold",
      "path": "fonts/DejaVuSans-Bold.ttf",
      "size": {
        "hook": 60,
        "meaning": 50,
        "action": 50,
        "cta": 60
      }
    }
  },
  "animations": {
    "fade_duration": 0.5,
    "slide_duration": 0.8,
    "zoom_scale": {
      "start": 0.8,
      "end": 1.2
    }
  },
  "audio": {
    "voice": {
      "language": "en",
      "tld": "us",
      "slow": false
    },
    "output_folder": "output/audio",
    "background_music": {
      "enabled": true,
      "volume": 0.25,
      "music_dir": "music",
      "styles": [
        "meditation",
        "432hz",
        "ambient_space",
        "spiritual_healing"
      ]
    },
    "dynamic_timing": {
      "enabled": true,
      "target_duration": 17.0,
      "max_speedup_factor": 1.3,
      "min_duration": 15.0,
      "max_duration": 17.5
    }
  },
  "branding": {
    "watermark_text": "@the17project",
    "watermark_position": "bottom_right",
    "watermark_opacity": 0.7,
    "watermark_size": 40
  }
}
